{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceRoot": "src",
    "declaration": true,
    "paths": {
      "mongo-migra": ["./src/types"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}